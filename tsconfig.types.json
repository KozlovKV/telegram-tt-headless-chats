{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "strict": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
  },
  "include": [
    "src/external-types.ts",
    "src/@types/global.d.ts"
  ],
  "exclude": [
    "**/*.tsx",
    "src/**/runtime/**",
    "src/components/**",
    "src/lib/**/runtime/**"
  ]
}

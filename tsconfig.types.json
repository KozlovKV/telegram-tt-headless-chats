{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "strict": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "baseUrl": "src/",
    "rootDir": "src/",
    // "moduleResolution": "node",
    "jsx": "react-jsx",           // на случай, если типы используют JSX типы
    "jsxImportSource": "@teact",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "paths": {
      "@teact": ["./src/lib/teact/teact.ts"],
      "@teact/*": ["./src/lib/teact/*"]
    }
  },
  "include": [
    "src/external-types.ts",
    "src/@types/global.d.ts"
  ],
  "exclude": [
    "**/*.tsx",
    "src/**/runtime/**",
    "src/components/**",
    "src/lib/**/runtime/**"
  ]
}
